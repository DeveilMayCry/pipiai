@page "/intergralList"
@attribute [Authorize()]
@using System.Net.Http.Json
@using BlazorApp1.Data;
@using BlazorApp1.Service;
@inject IntergralService service;

<MudTable Items="_userIntergrals" Hover="true" Breakpoint="Breakpoint.Sm" Loading="_isLoading" LoadingProgressColor="Color.Info">
    <HeaderContent>
        <MudTh>ID</MudTh>
        <MudTh>姓名</MudTh>
        <MudTh>手机号</MudTh>
        <MudTh>积分</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="ID">@context.Id</MudTd>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudTd DataLabel="Phone">@context.Phone</MudTd>
        <MudTd DataLabel="Intergral">@context.Intergral</MudTd>
    </RowTemplate>
</MudTable>

@code {
    private bool _isLoading = true;
    private List<UserIntergral> _userIntergrals = new List<UserIntergral>();

    protected override void OnInitialized()
    {
        _userIntergrals = service.Get(1);
        _isLoading = false;
    }
}
